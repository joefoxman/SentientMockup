@model POC.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="jumbotron">
    <div class="row">
        @Html.Partial("LoginLogo")
        <div class="col-xs-12 col-sm-4">
            <section id="loginForm">
                @using (Html.BeginForm(
                            "Login",
                            "Auth",
                            FormMethod.Post,
                            new { role = "form" }))
                {
                    @*@Html.AntiForgeryToken()*@
                    <div class="panel panel-default">
                        <div class="panel-heading"><strong>Please Sign In</strong></div>
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="bottom-spacer-sm">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "User Name" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="bottom-spacer-sm">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.ActionLink("Forgot your password?", "ForgotPasswordLogin")
                            </div>
                        </div>
                        <div class="panel-footer">
                            <button class="btn btn-success btn-small app-login">Sign In</button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>




