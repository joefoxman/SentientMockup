@model POC.Models.Case

<div class="row form-horizontal">
    <div style="margin-left: -10px;">
        <div class="form-group">
            @Html.LabelFor(a => a.CaseNumber, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.CaseNumber, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.DateOfService, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(a => a.DateOfService, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.Procedure, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Procedure, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.Diagnosis, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Diagnosis, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.Surgeon, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Surgeon, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.StaffNeurologist, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.StaffNeurologist, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>

