@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sentient Clinical System (Mock Up)</title>

    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/calendar")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryBootgrid")
    @Scripts.Render("~/bundles/jquerycookie")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/signalr")

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
</head>

<body>
<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="body-content">
            @RenderBody()
            <footer>
                <div class="pull-right"><a href="#">Chat Clicker</a></div>
                <div class="pull-left">&copy; @DateTime.Now.Year - Designed By Mind Over Machines</div>
            </footer>
        </div>
    </div>
</div>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <div class="navbar-text navbar-product-name">
                <span>Sentient Clinical Mockup</span>
            </div>
        </div>
        <div class="navbar-header pull-right">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Metronic", "DashboardSNP", "Metronic")</li>

                <li id="noti_Container">
                    <!--SHOW CHAT NOTIFICATIONS COUNT.-->
                    <div id="noti_Counter" style="display: none;"></div>
                    <!--A CIRCLE LIKE BUTTON TO DISPLAY NOTIFICATION DROPDOWN.-->
                    <div id="noti_Button">
                        <i class="fa fa-bell fa-lg" style="color: whitesmoke;"></i>
                    </div>

                    <!--THE NOTIFICAIONS DROPDOWN BOX.-->
                    <div id="notifications">
                        <h3 class="notification-h3">Chats</h3>
                        <div class="notification-window" id="notification-window">
                        </div>
                        <div class="notification-buttons">
                            <button class="btn btn-sm btn-success" id="notification-close">Close</button>
                        </div>
                    </div>
                </li>
                                
                <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                <li>@Html.ActionLink("Case", "Index", "Case")</li>
                <li>@Html.ActionLink("Reports", "Index", "Report")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("User Account", "UserAccounts", "Admin")</li>
                        <li>@Html.ActionLink("Permissions", "Permissions", "Admin")</li>
                    </ul>
                </li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </div>
</nav>
@RenderSection("scripts", required: false)
</body>
</html>

<div class="modal fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-warning">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Warning</h4>
            </div>
            <div class="modal-body">
                <span id="warningMessage"></span>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="cancel" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        sentientPOC.layout.initialize();
    });
</script>
