@model IEnumerable<POC.Models.User> 
@{
    <ul>
        @foreach (var user in Model) {
            <li>
                <div>
                    @Html.CheckBox(user.Id.ToString(), new { @class = "form-control-checkbox", @id = user.Id })
                </div>
                <div>
                    @Html.Label(user.Description, new { @class = "checkbox-label", @for = user.Id })
                </div>
            </li>
        }
    </ul>
}
